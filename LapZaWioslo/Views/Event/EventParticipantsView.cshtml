@model IEnumerable<LapZaWioslo.Models.Participant>

<p/>
<div style="margin-bottom:50px;">
    <div style="display:inline-block">
        <h3>Participants</h3>
    </div>
    <div style="display: inline-block; vertical-align: super; float:right">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-square"></i> @SharedStringLocalizer["String.Button.CreateNew"]
        </a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(@item.Name, "Details", "Participants", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.ActionLink(SharedStringLocalizer["String.Button.Edit"], "Edit", "Participants", new { id = item.Id }) |
                @Html.ActionLink(SharedStringLocalizer["String.Button.Details"], "Details", "Participants", new { id = item.Id }) |
                @Html.ActionLink(SharedStringLocalizer["String.Button.Delete"], "Delete", "Participants", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
